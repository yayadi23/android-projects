<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/app_red</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowIsFloating">true</item>-->
        <!--<item name="android:backgroundDimEnabled">false</item>-->
    </style>

    <style name="toolBarMasterStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/app_dark_100</item>
        <item name="android:textColorSecondary">@color/app_dark_100</item>
    </style>

    <style name="Toolbar.TitleTextMaster" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/app_dark_100</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
    </style>

    <style name="DrawerArrowCollapsingToolbar" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
        <item name="thickness">1dp</item>
        <item name="gapBetweenBars">4dp</item>
        <item name="drawableSize">24dp</item>
    </style>

    <style name="CollapsedToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textColor">@color/app_dark_100</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
    </style>

    <style name="ExpendedToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">@string/font_family_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>


    <style name="DialogFullScreen" parent="Theme.AppCompat.Light">
        <item name="android:windowAnimationStyle">@style/DialogFullScreenAnimation</item>
    </style>

    <style name="DialogFullScreenAnimation">
        <item name="android:windowEnterAnimation">@anim/abc_grow_fade_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/abc_shrink_fade_out_from_bottom</item>
    </style>
</resources>
