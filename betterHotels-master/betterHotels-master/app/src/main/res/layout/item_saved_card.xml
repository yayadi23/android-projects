<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="296dp"
    android:layout_height="156dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="296dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_saved_card"
            android:layout_width="296dp"
            android:layout_height="156dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@color/farmr_teal_500"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:padding="2dp"
            android:src="@drawable/ic_master_card" />

        <ImageView
            android:id="@+id/iv_remove_card"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignRight="@+id/iv_saved_card"
            android:layout_margin="8dp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/ic_camera_alt_black_24dp"
            android:tint="@color/white" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/iv_saved_card"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/card_number_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:fontFamily="@string/font_family_light"
                    android:gravity="center"
                    android:text="CARD NUMBER"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_300"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/tv_card_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:fontFamily="@string/font_family_medium"
                    android:gravity="center"
                    android:shadowColor="@color/black"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="3"
                    android:text="5126 67XX XXXX 7173"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/card_date_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_number_layout"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:fontFamily="@string/font_family_light"
                    android:gravity="center"
                    android:text="EXPIRY DATE"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_300"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/tv_expiry_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:fontFamily="@string/font_family_medium"
                    android:gravity="center"
                    android:shadowColor="@color/black"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="3"
                    android:text="08/2008"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/name_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/card_number_layout"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:fontFamily="@string/font_family_light"
                    android:gravity="center"
                    android:text="NAME ON THE CARD"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_300"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/tv_name_on_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:ellipsize="end"
                    android:fontFamily="@string/font_family_medium"
                    android:gravity="center"
                    android:maxLength="15"
                    android:shadowColor="@color/black"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="3"
                    android:singleLine="true"
                    android:text="Razi Abbas"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>