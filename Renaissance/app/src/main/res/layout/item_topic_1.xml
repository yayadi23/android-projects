<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:paddingLeft="16dp"
     android:paddingRight="16dp"
     android:paddingTop="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/michael"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/item_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Michael Jackson"
                android:textSize="16sp"
                android:paddingLeft="10dp"
                android:paddingTop="1dp"
                android:textColor="@color/colorBlue"/>

            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017.7.10   10:00"
                android:textColor="@color/colorLightGreyFont"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fa_commenting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="@string/fa_commenting_o"
                    android:textColor="@color/colorLightGreyFont"/>
                <TextView
                    android:id="@+id/item_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingLeft="8dp"
                    android:text="999+"/>
            </LinearLayout>
            <TextView
                android:id="@+id/item_image_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingLeft="30dp"
                android:text="@string/fa_picture_o"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorHeavyGreyFont"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="看过《达·芬奇密码》的人大概都知道达·芬奇密码筒，按照故事情节，密码筒里藏匿着关于郇山隐修会乃至整个基督教最大秘密的莎草纸。达·芬奇设计的密码筒内有一个装着醋液的..."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/item_commenter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whitney Huston"
        android:textColor="@color/colorBlue"
        />

    <TextView
        android:id="@+id/item_fixed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:text="最新评论："
        android:textColor="@color/colorHeavyGreyFont"
        />
        <TextView
            android:id="@+id/item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这个排列组合数现在破解起来容易吗？"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/colorHeavyGreyFont"
            />
    </LinearLayout>
    <TextView
        android:layout_width="353dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorGreyBar"/>
</LinearLayout>